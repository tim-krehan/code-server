{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["update-chart.yaml"],
      "matchStrings": [
        "\\s*#\\s*(?<datasource>[^:]+):(?<depName>[\\w\\-\\/]+)[\\n\\s]+\\w+_VERSION: '(?<currentValue>v[\\d\\.]+)'"
      ],
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}